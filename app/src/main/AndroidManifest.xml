<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mike.givemewingzz.instagram_codechallenge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".core.InstagramDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LandingPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.InstagramDemoLogin"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activities.MediaList"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activities.MediaListDetails"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activities.TagSearchPage"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activities.TagsPage"
            android:theme="@style/AppTheme.FullScreen">

        </activity>

    </application>

</manifest>
